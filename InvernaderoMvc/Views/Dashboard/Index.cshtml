@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">ðŸŒ¿ Dashboard General</h1>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                Temperatura (Ãºltimos 20 registros)
            </div>
            <div class="card-body">
                <canvas id="tempChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                Humedad (Ãºltimos 20 registros)
            </div>
            <div class="card-body">
                <canvas id="humidityChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    async function loadDashboardData() {
        const resp = await fetch('/datos');
        const data = await resp.json();
        // Tomamos los Ãºltimos 20 registros
        const slice = data.slice(-20);

        // Extraemos labels (hora:minuto) y series
        const labels = slice.map(s => new Date(s.FechaHora).toLocaleTimeString());
        const temps = slice.map(s => s.temperatue);
        const hums  = slice.map(s => s.humidity);

        // Temperatura
        const tempCtx = document.getElementById('tempChart').getContext('2d');
        new Chart(tempCtx, {
            type: 'line',
            data: {
                labels,
                datasets: [{
                    label: 'Â°C',
                    data: temps,
                    tension: 0.3,
                    fill: false,
                    borderColor: 'rgba(255,99,132,1)'
                }]
            },
            options: {
                responsive: true,
                scales: { x: { title: { display: true, text: 'Hora' } } }
            }
        });

        // Humedad
        const humCtx = document.getElementById('humidityChart').getContext('2d');
        new Chart(humCtx, {
            type: 'line',
            data: {
                labels,
                datasets: [{
                    label: '%',
                    data: hums,
                    tension: 0.3,
                    fill: false,
                    borderColor: 'rgba(54,162,235,1)'
                }]
            },
            options: {
                responsive: true,
                scales: { x: { title: { display: true, text: 'Hora' } } }
            }
        });
    }

    // Carga al inicio
    loadDashboardData();
    </script>
}
